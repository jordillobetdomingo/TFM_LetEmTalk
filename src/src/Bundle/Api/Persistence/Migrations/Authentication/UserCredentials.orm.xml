<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="LetEmTalk\Component\Domain\Authentication\Entity\UserCredentials" table="credentials">

    <id name="username" type="string" column="username"></id>

        <field name="password" column="password" type="string" length="100" nullable="false" />
        <field name="userId" column="user_id" type="integer" />
    </entity>

</doctrine-mapping>