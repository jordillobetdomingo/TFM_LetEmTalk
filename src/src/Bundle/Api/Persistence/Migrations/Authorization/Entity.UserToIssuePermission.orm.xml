<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="LetEmTalk\Component\Domain\Authorization\Entity\UserToIssuePermission" table="userToIssuePermission">
        <id name="user" association-key="true" />
        <id name="Issue" association-key="true" />

        <field name="permissionRead" column="permission_read" type="boolean" />
        <field name="permissionWrite" column="permission_write" type="boolean" />
        <field name="permissionManage" column="permission_manage" type="boolean" />

        <many-to-one field="user" target-entity="LetEmTalk\Component\Domain\User\Entity\User">
            <join-column name="user_id" referenced-column-name="id" />
        </many-to-one>

        <many-to-one field="issue" target-entity="LetEmTalk\Component\Domain\Chat\Entity\Issue">
            <join-column name="issue_id" referenced-column-name="id" />
        </many-to-one>

    </entity>

</doctrine-mapping>